<div class="page-header">
  <h3>Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @actor.name %></dd>

      <dt>Dob</dt>
      <dd><%= @actor.dob %></dd>

      <dt>Bio</dt>
      <dd><%= @actor.bio %></dd>

      <dt>Image url</dt>
      <dd><%= @actor.image_url %></dd>
      
      <dt># of Characters Actor has played</dt>
      <dd><%= Character.where(:actor_id => @actor_id).count %></dd>
      

     </dl>
    
    <div class="btn-group btn-group-justified">
      <a href="/actors" class="btn btn-primary">
        Back
      </a>
      <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>


<!-- copied this from director page, don't forget to update -->

<ul>
  <% Character.where(:actor_id => @actor_id).each do |character| %>
    <li><a href="/characters/<%= character_id %>"><%= character_name %></a></li>
  <% end %>
</ul>

  <div class="row">
  <div class="col-md-12">
    <form action="/create_character" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
    
    <h2>Character List</h2>  
      
      <!-- Name of Character -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>
        
        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @character_name %>">
      </div>
      
      <!-- Actor -->
      <div class="form-group">
        <label for="name" class="control-label">
          Actor
        </label>
        
        <input type="text" id="actor" name="actor" placeholder="Actor" class="form-control" value="<%= @actor_name %>">
      </div>
      
      <!-- Movie -->
      <div class="form-group">
        <label for="name" class="control-label">
          Movie
        </label>
        
        <%= select_tag("movie_id", options_from_collection_for_select(Movie.all, :id, :title, @character.movie_id), :class => "form-control") %>
        <a href="/movies/new">Add a new movie</a>
      </div>
      
      <!-- Character ID -->
        <input type="hidden" name="actor_id" value="<%= @actor_id %>"> 
      </div>

      <button class="btn btn-success">
        Create Character
      </button>
      or
      <a href="/characters">Cancel</a>
    </form>
  </div>
</div>