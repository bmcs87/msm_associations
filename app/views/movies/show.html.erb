<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Duration</dt>
      <dd><%= @movie.duration %></dd>

      <dt>Description</dt>
      <dd><%= @movie.description %></dd>

      <dt>Image url</dt>
      <dd><%= @movie.image_url %></dd>
      
      <dt>Director</dt>
      <dd>
        <a href="/directors/<%= @movie.director_id %>">
          <!-- <#%= Director.find_by(:id => @movie.director_id).name %> -->
          <%= @movie.director.name %>
        </a>  
      </dd>
      
      <dt>Actors</dt>
      <dd>
        <% @movie.actors.each do |actor| %>
          <%= actor.name %>
          (<%= Character.find_by(:actor_id => actor.id, :movie_id => @movie.id).name %>)
        <% end %>  
      </dd>
    </dl>

<form action="/create_character" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>
        <%= select_tag("movie_id", options_from_collection_for_select(Character.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Actor -->
      <div class="form-group">
        <label for="actor_id" class="control-label">
          Actor
        </label>
        <%= select_tag("movie_id", options_from_collection_for_select(Actor.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Hidden Field -->
         <input type="hidden" name="movie_id" value="<%= @movie.id %>">
      </div>

      <button class="btn btn-success">
        Create Movie
      </button>
      or
      
      <ul>
      <li>
      <a href="/movies">Cancel</a>
      </li>
      
      <li>
      <a href="/movies/new">Add a New Movie</a>
      </li>
      </ul>
      
    </form>

      <!-- Hidden Movie ID Field -->
      <div class="form-group">
        <input type="hidden" name="movie_id" value="<%= @movie_id %>"> 
      </div>


    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  
  </div>
</div>
